<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0;net6.0-android;net6.0-ios</TargetFrameworks>
		<TargetFrameworks Condition=" '$(OS)' != 'Windows_NT'">$(TargetFrameworks);net6.0-maccatalyst</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT'">$(TargetFrameworks);net6.0-windows10.0.19041.0</TargetFrameworks>
    <RootNamespace>Microsoft.Maui.Controls</RootNamespace>
    <AssemblyName>Microsoft.Maui.Controls</AssemblyName>
    <Nullable>disable</Nullable>
	</PropertyGroup>
  <PropertyGroup>
    <PackageId>Microsoft.Maui.Controls</PackageId>
  </PropertyGroup>
	<ItemGroup>
		<Compile Remove="Internals\Legacy\**" />
		<EmbeddedResource Remove="Internals\Legacy\**" />
		<None Remove="Internals\Legacy\**" />
	</ItemGroup>
	<ItemGroup>
	  <Folder Include="Xaml\Diagnostics\" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\..\..\Core\src\Core-net6.csproj" />
	</ItemGroup>
	<PropertyGroup>
    <GitInfoReportImportance>high</GitInfoReportImportance>
  </PropertyGroup>
  <Target Name="Net6WinUIWorkaround" BeforeTargets="_GetSdkToolsPathsFromSdk" Condition="$(TargetFramework.Contains('-windows')) == true ">
    <PropertyGroup>
      <TargetPlatformIdentifierAdjusted>UAP</TargetPlatformIdentifierAdjusted>
    </PropertyGroup>
  </Target>
</Project>
